<div class='log-in'>
  <div class='log-in__form-wrapper'>
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, html: {class: "log-in__form-wrapper__form"}) do |f| %>
      <div class='log-in__form-wrapper__form__input-wrapper'>
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'log-in__form-wrapper__form__input-wrapper__input' %>
      </div>
      <div class='log-in__form-wrapper__form__input-wrapper'>
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "off", class: 'log-in__form-wrapper__form__input-wrapper__input' %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class='log-in__form-wrapper__form__input-wrapper'>
        <%= f.submit "Log in", class: 'btn btn-primary log-in__form-wrapper__form__button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
