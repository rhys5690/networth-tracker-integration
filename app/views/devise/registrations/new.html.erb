<div class='sign-up'>
  <div class='sign-up__form-wrapper'>
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: {class: "sign-up__form-wrapper__form"}) do |f| %>
      <%= devise_error_messages! %>

      <div class='sign-up__form-wrapper__form__input-wrapper'>
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up__form-wrapper__form__input-wrapper__input' %>
      </div>

      <div class='sign-up__form-wrapper__form__input-wrapper'>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: 'sign-up__form-wrapper__form__input-wrapper__input' %>
      </div>

      <div class='sign-up__form-wrapper__form__input-wrapper'>
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'sign-up__form-wrapper__form__input-wrapper__input' %>
      </div>

      <div class='sign-up__form-wrapper__form__input-wrapper'>
        <%= f.submit "Sign up", class: 'btn btn-primary sign-up__form-wrapper__form__button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
